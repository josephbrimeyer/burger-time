<h1>Burger-Time!</h1>

<h2>Burgers ready to be devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured burgers!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca" id="burgerName">Burger Name:</label>
        <input type="text" id="ca" name="burgerName">
    </div>

    <div class="form-group">
        <label for="burgers" class="select-craving">Select Burger or Devoured</label><br>
        <input type="radio" name="devoured" value="1" class "select-craving" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0" class="select-craving"> Order!
        <div>
            <button type="submit" id="burger-btn">Add Burger</button>
        </div>
    </div>
</form>