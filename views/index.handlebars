<div class="container">
    {{!-- <section class="wrapper"> --}}
        <img class="bgr-img" src="/assets/images/burger.png" />

        <h1>Burger-Time!</h1>

        <h3>Burgers ready to devour!</h3>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>


        <h3>Devoured burgers!</h3>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>


        <h2>Add a burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca" id="burger-name">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
            </div>

            <div class="form-group">
                <label for="burgers" class="select-craving">Select Craving or Devoured</label><br>
                <input type="radio" name="devoured" value="1" class="select-craving" checked> Devoured! <br>
                <input type="radio" name="devoured" value="0" class="select-craving"> Craving!
                <div>
                    <button type="submit" id="burger-btn">Add Burger</button>
                </div>
            </div>
        </form>
</div>