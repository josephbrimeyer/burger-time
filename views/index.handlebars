<h1>Burger-Time!</h1>

<h2>Burgers ready to be devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured burgers!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
    </div>

    <div class="form-group">
        <label for="devour">Devour</label><br>
        <input type="radio" name="devour" value="1" checked> Devour!<br>
        <input type="radio" name="devour" value="0"> Devoured!
    </div>

    <button type="submit">Add Burger</button>
</form>